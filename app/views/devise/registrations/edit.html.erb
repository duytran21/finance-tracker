<%= bootstrap_devise_error_messages! %>
<div class="panel panel-default devise-bs">
  <div class="panel-heading devise-heading">
    <h4><%= t('.title', resource: resource_class.model_name.human , default: "Edit #{resource_name.to_s.humanize}") %></h4>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <div class="form-group form-group-cust">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: 'form-control form-control-cust' %>
      </div>
      <div class="form-group form-group-cust">
        <div class="col-md-6 no-padding">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, class: 'form-control form-control-cust' %>
        </div>
        <div class="col-md-6 no-padding left-padding">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: 'form-control form-control-cust' %>
        </div>
      </div>
      <div class="form-group form-group-cust">
        <%= f.label :password %> <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it', default: "leave blank if you don't want to change it") %>)</i>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control form-control-cust' %>
      </div>
      <div class="form-group form-group-cust">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'form-control form-control-cust'  %>
      </div>
      <div class="form-group form-group-cust">
        <%= f.label :current_password %> <i>(<%= t('.we_need_your_current_password_to_confirm_your_changes', default: 'we need your current password to confirm your changes') %>)</i>
        <%= f.password_field :current_password, class: 'form-control form-control-cust' %>
      </div>
      <%= f.submit t('.update', default: 'Update'), class: 'btn btn-primary btn-black' %>
    <% end %>
    <%= link_to "Cancel", root_path, class: 'btn-devise' %>
    <%= link_to t('.cancel_my_account', default: 'Delete my account'), registration_path(resource_name), data: { confirm: t('.are_you_sure', default: "Are you sure?") }, method: :delete, class: 'btn-devise' %>
  </div>
</div>

